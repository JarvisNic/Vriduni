<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Sex</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Facultad</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id_carnet %></td>
        <td><%= student.name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.sex %></td>
        <td><%= student.tel %></td>
        <td><%= student.email %></td>
        <td><%= student.facultad %></td>
        <td><%= student.proyecto_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

