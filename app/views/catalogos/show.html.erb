<% @nav = "catalogo" %>
<div class="container">
  <% if current_user %>
    <% if current_user.siglas == @catalogo.entidad %>
<div style="width:90%;margin:auto;position:relative;">

  <div class="col-md-12">

        <div class="panel panel-default">

          <div class="panel-heading " style="height: 100%;"> 
            <div class="container" style="width: 100%;">

            <h1 class="panel-title" style="float: left;"> <%= @catalogo.nombre %> </h1>
    
           <%= link_to '', edit_catalogo_path(@catalogo) ,class: "btn btn-default glyphicon glyphicon-pencil col-md-1" ,style: "float:right;margin-right: 2%;width: 7%;"%>
           <%= link_to '', @catalogo, method: :delete, data: { confirm: '¿Estas Seguro?', class: "btn btn-default glyphicon glyphicon-pencil col-md-1" ,style: "float:right;margin-right: 2%;width: 7%;"} %>
           </div>
          </div>

    <div class="panel-body">
    <div class="row">
        <h3> <strong class= "col-md-3">Entidad:</strong></h3>
        <h4 class ="col-md-9"><%= @catalogo.entidad %></h4>
</div>

