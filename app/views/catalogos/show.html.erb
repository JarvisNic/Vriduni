 </div>
  
   <div class="row"> <h3><strong class= "col-md-3">Tipo: </strong></h3>
     <h4 class ="col-md-9"><%= @catalogo.tipo.descripcion%></h4>
     </div>

     <div class="row"> <h3><strong class= "col-md-3">Categoría:</strong></h3>
     

     <% case @catalogo.categorizacion.to_i %>
