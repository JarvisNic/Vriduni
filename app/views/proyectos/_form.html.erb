<% if @proyecto.errors.any? %>
  <div style="margin:1em;" class="alert alert-warning alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
<%end%>
<%= form_for @proyecto  do |f| %>
  <% if @proyecto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@proyecto.errors.count, "Errore") %> se encontraron al intentar insertar:</h2>

      <ul>
      <% @proyecto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if @proyecto.errors.any? %>
  </div>
<%end%>

  <div style="margin:0.5em;">
    <%= f.label :Nombre ,:style=>"width:11%;float:left;margin:0.3em ;"%>
    <%= f.text_field :nombre, class: "form-control ", placeholder: "Nombre del Proyecto",:style=>"float:left;width:32%;margin: 0;"%>

    <%= f.label :Area_de_investigación,:style=>"width:18%;float:left;margin:0.3em ;" %>
    <%= f.select :area, [["Biotecnología"], ["Calidad Educativa"], ["Ciencias del Ambiente"], ["Control y Automatización"],["Diseño, Construcción, Urbanismo y Territorio"],["Energía"],[ "Ingeniería de Procesos y Gestión Empresarial"],["Tecnología Agropecuarias y Agroindustriales"],["Tecnología de Información y Comunicación (TIC)]"]],{}, { :class => 'form-control',:style => 'width:35%' }%>

    <%= f.label :Fecha_Inicio ,:style=>"width:11%;float:left;margin:0.3em ;"%>
    <%= f.date_select :fecha_inicio, {}, {:class=>'form-control date-control', :style=>'float:left;width:10.6%;'} %>

    <%= f.label :Fecha_Fin ,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.date_select :fecha_fin, {}, {:class=>'form-control date-control', :style=>'float:left;width:11.7%;'} %>

    <%= f.label :Duracion ,:style=>"width:11%;float:left;margin:0.3em;"%>
    <%= f.select :duracion, [[1], [2], [3], [4],[5]],{}, { :class => 'form-control',:style=> 'width:32%;float:left;' }%>

    <%= f.label :Lineas_de_investigación ,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_field :linea, class: "form-control", placeholder: "Indique al menos una" ,:style=>"float:left;width:35%;margin: 0;"%>

      <%= f.label :Resumen ,:style=>"width:11%;float:left;margin:0.3em ;"%>
      <%= f.text_area :resumen, class: "form-control", placeholder: "" ,:style=>"float:left;width:32%;height:80px;margin: 0;"%>

     <%= f.label :Definición_o_Planteamiento_del_Problema ,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_area :problema, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:35%;margin: 0;height:80px;"%>

     <%= f.label :Justificación_y_uso_de_los_resultados ,:style=>"width:11%;float:left;margin:0.3em ;"%>
    <%= f.text_area :justificacion, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:32%;margin: 0;height:80px;"%>

     <%= f.label :Fundamento_Teórico ,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_area :marco, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:35%;margin: 0;height:80px;"%>

     <%= f.label :Objetivos_de_la_investigación ,:style=>"width:90%;float:left;margin:0.3em ;"%>
     <%= f.label :Objetivo_general ,:style=>"width:11%;float:left;margin:0.3em ;"%>
    <%= f.text_area :objetivo_general, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:32%;margin: 0;height:80px;"%>

    <%= f.label :Objetivo_específico,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_area :objetivo_especifico, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:35%;margin: 0;height:80px;"%>

    <%= f.label :Tipo_de_estudio,:style=> "width:11%;float:left;margin:0.3em ;"%>
    <%= f.text_area :tipo_estudio, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:32%;margin: 0;height:80px;"%>

    <%= f.label :Procedimiento_para_el_tratamiento_del_problema,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_area :proc_tratamiento, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:35%;margin: 0;height:80px;"%>

    <%= f.label :Procedimientos_éticos,:style=>"width:11%;float:left;margin:0.3em ;"%>
    <%= f.text_area :proc_eticos, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:32%;margin: 0;height:80px;"%>

    <%= f.label :Conclusion,:style=>"width:18%;float:left;margin:0.3em ;"%>
    <%= f.text_area :conclusion, class: "form-control", placeholder: "Responsable" ,:style=>"float:left;width:35%;margin: 0;height:80px;"%>
</br></br></br></br></br></br></br></br></br></br></br></br>
 <div class="actions" style="width:75%; margin:0.3em 2em;">
    <%= f.submit "Siguiente", :class => 'btn btn-primary btn-lg' %>
  </div>
  </div>

<% end %>