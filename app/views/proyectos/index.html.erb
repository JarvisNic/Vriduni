<% @nav = "proyecto" %>
<div style="overflow:auto;">
<h1 style="margin: 0.3em 2em;">Mostrando Proyectos</h1>

<%= form_tag proyectos_path, :method => "get" do %>
  <div class="input-group" style="padding: 5px;">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Nombre del convenio"%>
    <span class="input-group-btn">
        <button class="btn btn-default" type="button">Buscar!</button>
      </span>
    </div>
<%end%>


<table class = "table table-bordered table-hover table-striped" style="width:95%;     margin: 0 5px;padding-bottom:40px;" >
  <thead>
    <tr>
      <th style="width:19%">Nombre</th>
      <th style="width:30%">fecha_inicio</th>
      <th style="width:25%">fecha_fin</th>
      <th style="width:25%">duracion</th>
      <th style="width:25%">Area</th>
      <th style="width:25%">linea</th>
      <th style="width:25%">resumen</th>
      <th style="width:25%">problema</th>
      <th style="width:25%">justificacion</th>
      <th style="width:25%">marco</th>
      <th style="width:25%">objetivo_general</th>
      <th style="width:25%">objetivo_especifico</th>
      <th style="width:25%">tipo_estudio</th>
      <th style="width:25%">proc_tratamiento</th>
      <th style="width:25%">conclusion</th>
      <th style="width:25%">id_publicacion</th>
      <th style="width:25%">id_cronograma</th>
      <th style="width:25%">Area</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @a = 0 %>
      <% @proyectos.each do |proyecto| %>
      <td><%= proyecto.nombre %></td>
      <td><%= proyecto.fecha_inicio %></td>
      <td><%= proyecto.fecha_fin %></td>
      <td><%= proyecto.duracion %></td>
      <td><%= proyecto.area %></td>
      <td><%= proyecto.linea %></td>
      <td><%= proyecto.resumen %></td>
      <td><%= proyecto.problema %></td>
      <td><%= proyecto.justificacion %></td>
      <td><%= proyecto.marco %></td>
      <td><%= proyecto.objetivo_general %></td>
      <td><%= proyecto.objetivo_especifico %></td>
      <td><%= proyecto.tipo_estudio %></td>
      <td><%= proyecto.proc_tratamiento %></td>
      <td><%= proyecto.proc_eticos %></td>
      <td><%= proyecto.conclusion %></td>
      <td><%= proyecto.id_publicacion %></td>
      <td><%= proyecto.id_cronograma %></td>
      <td>
        <div class="dropdown" style="margin: 1px 0;">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
            <li style="float:left;padding-right:20px;"><%= link_to 'Show', proyecto %></li><span class="glyphicon glyphicon-expand" aria-hidden="true" style="float:right; margin:0.4em 0.5em;"></span>
            <li style="float:left;">
             <%if current_user %>
             <% if current_user.siglas == "proyecto" %><%= link_to 'Edit', edit_proyecto_path(proyecto) %></li><span class="glyphicon glyphicon-edit" aria-hidden="true" style="float:right;margin:0.4em 0.5em;"></span>
            <li style="float:left;"><%= link_to 'Destroy', proyecto, method: :delete, data: { confirm: 'Are you sure?' } %></li><span class="glyphicon glyphicon-remove-sign" aria-hidden="true" style="float:right;margin:0.4em 0.5em;"></span><%end%>
          </ul>
          <%end%>
        </div>
      </td>
       <%@a = @a+1 %>
    </tr>
      <%end%>

<div>
    <%= paginate(@proyectos) %>
</div>
   </tbody>
</table>
